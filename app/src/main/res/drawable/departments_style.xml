<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="false">

        <shape>
            <gradient
                android:startColor="@color/colorWhite2"
                android:centerColor="@color/top2Color"
                android:endColor="@color/colorWhite2"
                android:angle="270"
                />

            android:shape="rectangle">

            <stroke
                android:width="1dp"
                android:color="@color/line2Color" />


            <padding
                android:bottom="1dp" android:left="2dp" android:right="2dp" android:top="1dp" />


        </shape>
    </item>


    <item
        android:state_pressed="true">

        <shape>
            <gradient
                android:startColor="@color/top2Color"
                android:centerColor="@color/colorWhite2"
                android:endColor="@color/top2Color"
                android:angle="270"
/>

            android:shape="rectangle">

            <stroke
                android:width="1dp"
                android:color="@color/line2Color" />



            <padding
                android:bottom="1dp" android:left="2dp" android:right="2dp" android:top="1dp" />


        </shape>
    </item>

</selector>